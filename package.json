{
  "name": "raumgleiter",
  "version": "1.0.0",
  "description": "Raumgleiter Website",
  "main": "index.js",
  "scripts": {
    "start": "parcel ./src/index.html",
    "build": "parcel build ./src/*.html --public-url https://www.raumgleiter.ch",
    "test": "npm run build",
    "pretest": "npm run lint",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint --ext .js",
    "lint:css": "npm run lint:css:scss",
    "lint:css:scss": "stylelint 'src/**/*.scss'"
  },
  "staticFiles": {
    "staticPath": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meodai/raumgleiter.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/meodai/raumgleiter/issues"
  },
  "homepage": "https://github.com/meodai/raumgleiter#readme",
  "dependencies": {
    "parcel-plugin-static-files-copy": "^2.4.3",
    "pixi.js": "^5.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.5",
    "git-cz": "^4.7.0",
    "modern-css-reset": "^1.1.1",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.26.10"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
